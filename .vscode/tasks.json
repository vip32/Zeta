{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
          "build",
          "Zeta.sln",
          // Ask dotnet build to generate full paths for file names.
          "/property:GenerateFullPaths=true",
          // Do not generate summary otherwise it leads to duplicate errors in Problems panel
          "/consoleloggerparameters:NoSummary"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build (nuke)",
      "command": "./build.cmd",
      "type": "shell",
      "args": [],
      "group": {
        "kind": "build"
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "clean",
      "command": "dotnet",
      "type": "shell",
      "args": [
          "clean",
          "Zeta.sln"
      ],
      // "group": {
      //   "kind": "build",
      //   "isDefault": true
      // },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "unittest foundation",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "test",
        "./foundation/tests/Foundation.UnitTests/Foundation.UnitTests.csproj"
    ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}
